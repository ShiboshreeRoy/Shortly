      <!-- Enterprise Plan -->
      <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-2xl transition duration-300 transform hover:-translate-y-1">
        <h2 class="text-2xl font-bold text-indigo-600 mb-4">Enterprise</h2>
        <p class="text-gray-600 mb-4">For businesses & high-volume usage</p>
        <p class="text-3xl font-extrabold mb-6">Contact Us</p>
        <ul class="text-gray-700 mb-6 space-y-2 text-left">
          <li>Unlimited Users</li>
          <li>Custom Branding</li>
          <li>Dedicated Support</li>
          <li>API Access</li>
        </ul>
        <a href="<%= root_path %>" class="block w-full px-4 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition duration-300">Contact Sales</a>
      </div>

    </div>
  </div>
