<div class="max-w-lg mx-auto mt-12 bg-white shadow-2xl rounded-3xl p-8 sm:p-12 relative overflow-hidden">
  <!-- Gradient animated background glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 opacity-20 blur-3xl -z-10 animate-gradient-x"></div>

  <h1 class="text-3xl sm:text-4xl font-extrabold mb-8 text-center bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500">
    Shorten a New URL
  </h1>

  <%= form_with model: @short_url, local: true do |f| %>
    <div class="mb-6">
      <%= f.label :original_url, "Original URL", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :original_url, placeholder: "https://example.com", class: "w-full px-4 py-3 border rounded-xl shadow-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none transition duration-300 transform hover:scale-[1.02]" %>
    </div>

    <div class="mb-6">
      <%= f.label :custom_code, "Custom Short Code (Optional)", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :custom_code, placeholder: "e.g: mylink123", class: "w-full px-4 py-3 border rounded-xl shadow-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none transition duration-300 transform hover:scale-[1.02]" %>
    </div>

    <div class="text-center">
      <%= f.submit "Shorten URL", class: "bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 hover:from-pink-500 hover:via-purple-600 hover:to-indigo-600 text-white font-semibold px-6 py-3 rounded-full transition duration-300 shadow-lg transform hover:scale-105" %>
    </div>
  <% end %>
</div>

<!-- Tailwind animation for gradient glow -->
<style>
@keyframes gradient-x {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
.animate-gradient-x {
  background-size: 200% 200%;
  animation: gradient-x 10s ease infinite;
}
</style>
