<div class="max-w-6xl mx-auto mt-10 px-4 sm:px-6 lg:px-8">
  <!-- Header & Action -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 space-y-4 sm:space-y-0">
    <h1 class="text-3xl sm:text-4xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500">
      Your Shortened URLs
    </h1>
    <%= link_to "Shorten New URL", new_short_url_path, class: "bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 hover:from-pink-500 hover:via-purple-600 hover:to-indigo-600 text-white font-semibold px-5 py-2 rounded-full transition duration-300 shadow-lg" %>
  </div>

  <!-- Table for larger screens -->
  <div class="hidden md:block overflow-x-auto">
    <table class="min-w-full bg-white shadow-2xl rounded-3xl overflow-hidden">
      <thead class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500">
        <tr>
          <th class="px-6 py-3 text-left text-white font-semibold uppercase text-sm">Original URL</th>
          <th class="px-6 py-3 text-left text-white font-semibold uppercase text-sm">Short URL</th>
          <th class="px-6 py-3 text-left text-white font-semibold uppercase text-sm">Clicks</th>
          <th class="px-6 py-3 text-left text-white font-semibold uppercase text-sm">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @short_urls.each do |url| %>
          <tr class="hover:bg-gray-50 transition duration-200 rounded-lg">
            <td class="px-6 py-4 text-gray-700 break-words"><%= url.original_url %></td>
            <td class="px-6 py-4 break-words">
              <%= link_to short_url(url.short_code), short_url(url.short_code), target: "_blank", class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
            </td>
            <td class="px-6 py-4 text-gray-700 font-medium"><%= url.clicks_count %></td>
            <td class="px-6 py-4">
              <%= link_to "View", short_url_path(url), class: "bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 hover:from-pink-500 hover:via-purple-600 hover:to-indigo-600 text-white font-semibold px-4 py-2 rounded-full transition duration-300 shadow-lg" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Card layout for mobile -->
  <div class="md:hidden space-y-4">
    <% @short_urls.each do |url| %>
      <div class="bg-white shadow-2xl rounded-3xl p-4 space-y-2">
        <p class="text-gray-700"><span class="font-semibold">Original URL:</span> <span class="text-indigo-600 break-words"><%= url.original_url %></span></p>
        <p class="text-gray-700"><span class="font-semibold">Short URL:</span> 
          <%= link_to short_url(url.short_code), short_url(url.short_code), target: "_blank", class: "text-indigo-600 hover:text-indigo-800 underline break-words" %>
        </p>
        <p class="text-gray-700"><span class="font-semibold">Clicks:</span> <span class="font-medium"><%= url.clicks_count %></span></p>
        <div class="flex justify-end">
          <%= link_to "View", short_url_path(url), class: "bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 hover:from-pink-500 hover:via-purple-600 hover:to-indigo-600 text-white font-semibold px-4 py-2 rounded-full transition duration-300 shadow-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
