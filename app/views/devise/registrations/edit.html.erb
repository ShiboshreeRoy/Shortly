<div class="min-h-screen bg-gradient-to-b from-indigo-50 via-purple-50 to-pink-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-lg mx-auto bg-white shadow-2xl rounded-3xl p-8 sm:p-12">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-800 mb-8 text-center">Edit Profile</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-6 text-yellow-600 font-medium">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :password, "New Password", class: "block text-gray-700 font-semibold mb-2" %>
        <i class="text-gray-400 text-sm">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-2 px-4 py-3 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300" %>
        <% if @minimum_password_length %>
          <em class="text-gray-400 text-sm"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, "Current Password", class: "block text-gray-700 font-semibold mb-2" %>
        <i class="text-gray-400 text-sm">(required to confirm changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full mt-2 px-4 py-3 border rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300" %>
      </div>

      <div class="text-center">
        <%= f.submit "Update Profile", class: "bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 text-white font-semibold px-6 py-3 rounded-full shadow-lg hover:shadow-xl transition duration-300" %>
      </div>
    <% end %>

    <hr class="my-8 border-gray-300">

    <div class="text-center mb-6">
      <h3 class="text-lg font-bold text-gray-700 mb-2">Cancel Account</h3>
      <p class="text-gray-500 mb-4">Unhappy? Cancel your account here.</p>
      <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-6 py-3 rounded-full transition duration-300 shadow-md" %>
    </div>

    <div class="text-center">
      <%= link_to "Back", :back, class: "text-indigo-600 hover:text-indigo-800 font-semibold transition duration-300" %>
    </div>
  </div>
</div>
